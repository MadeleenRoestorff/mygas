{
    "name": "my-utilities-backend",
    "version": "1.0.0",
    "description": "The backend for a web application designed to help you track your utility usage",
    "main": "app.ts",
    "keywords": [
        "utilities",
        "express"
    ],
    "author": "Madeleen Roestorff",
    "license": "MIT",
    "scripts": {
        "start": "node dist/src/app.js",
        "dev": "NODE_ENV=dev nodemon src/app.ts",
        "build": "tsc -p tsconfig.prod.json",
        "test": "jest --runInBand",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage --runInBand",
        "prepare": "husky install",
        "validate": "scripts/validate.sh"
    },
    "devDependencies": {
        "@jest/globals": "^29.3.1",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.14",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/node": "^18.11.11",
        "@types/sqlite3": "^3.1.8",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.45.1",
        "@typescript-eslint/parser": "^5.45.1",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.2",
        "jest": "^29.3.1",
        "jira-prepare-commit-msg": "^1.7.1",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3"
    },
    "dependencies": {
        "axios": "^1.2.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "http-status-codes": "^2.2.0",
        "jsonwebtoken": "^9.0.0",
        "sequelize": "^6.28.0",
        "sqlite3": "^5.1.4"
    },
    "lint": "eslint . ",
    "lint:fix": "eslint --fix",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "jira-prepare-commit-msg": {
        "messagePattern": "$J: $M",
        "jiraTicketPattern": "([A-Z]+-\\d+)",
        "commentChar": "#",
        "isConventionalCommit": false,
        "allowEmptyCommitMessage": false,
        "gitRoot": ""
    }
}